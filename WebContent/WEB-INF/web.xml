<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>com.fm.listener.CCListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.fm.common.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRole</servlet-name>
        <servlet-class>com.fm.admin.AddRole</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDepartment</servlet-name>
        <servlet-class>com.fm.admin.AddDepartment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClaimType</servlet-name>
        <servlet-class>com.fm.admin.AddClaimType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostBillServlet</servlet-name>
        <servlet-class>com.fm.common.PostBillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>com.fm.admin.AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>com.fm.common.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeServletServlet</servlet-name>
        <servlet-class>com.fm.common.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployee</servlet-name>
        <servlet-class>com.fm.admin.UpdateEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateClaim</servlet-name>
        <servlet-class>com.fm.admin.UpdateClaim</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRole</servlet-name>
        <url-pattern>/addRole</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDepartment</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddClaimType</servlet-name>
        <url-pattern>/addClaimType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostBillServlet</servlet-name>
        <url-pattern>/postBill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeServletServlet</servlet-name>
        <url-pattern>/changeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployee</servlet-name>
        <url-pattern>/updateEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateClaim</servlet-name>
        <url-pattern>/updateClaim</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
